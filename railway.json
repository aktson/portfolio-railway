{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "nix-env -iA nixpkgs.python39 nixpkgs.nodejs-14_x && npm install && npm run build",
    "nixpacksVersion": "1.13.0"
  },
  "deploy": {
    "startCommand": "nix-env -iA nixpkgs.python39 nixpkgs.nodejs-14_x && npm start",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health"
  }
}
