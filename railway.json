{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "nix-env -iA nixpkgs.nodejs-14 && nix-env -iA nixpkgs.python3_10 && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "nix-env -iA nixpkgs.python3_10 && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
